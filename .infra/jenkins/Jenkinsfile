    pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'chmod +x ./gradlew'
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('Building SONAR') {
        		steps {
            			echo 'Using sonarQube to do static code analysis'
            			sh "  ./gradlew sonarqube \
            		        -Dsonar.projectKey=tavisca-tkatyal_merchantgalaxy \
                  		-Dsonar.organization=tavisca-tkatyal \
                  		-Dsonar.host.url=https://sonarcloud.io \
                  		-Dsonar.login=885747cd20b4cc92e0494025f0340464da150c3e"
        		}
        	}
        stage('Build DockerImage')
        {
             steps {
            sh script: '''
                docker build -t "merchantgalaxy" -f .infra/docker/Dockerfile .
                '''
            }
        }
        stage('Publish DockerImage')	      
        {	        
                     steps {
                sh "docker login -u tapsi -p tapsi@123"
                sh "docker tag merchantgalaxy:latest tapsi/merchantgalaxy:latest"
                sh "docker push tapsi/merchantgalaxy:latest"
            }
        }
    }
    post{
        always{
            deleteDir()
    }
    }
}