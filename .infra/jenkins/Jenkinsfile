    pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'chmod +x ./gradlew'
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('Static Code Analysis')
        {
            steps {
                sh script: '''
                    echo "I am Sonarqube Scan"
                ''',
            label: "static code analysis"
            }
        }
        stage('Build DockerImage')
        {
             steps {
                echo 'Starting to build docker image'
                sh ' cd   .infra/docker'
                 sh 'docker build -t merchant . '
                 sh 'docker run merchant'
             
            }
        }
        stage('Publish DockerImage')	      
        {	        
                    steps {
                      sh script: '''
                                        echo "I am Pubishing DockerImage ="
                           ''',
            	            label: "Publishing Docker Image"
                    } 
          }
    }
        
    }
    
