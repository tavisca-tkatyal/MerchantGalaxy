    pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'chmod +x ./gradlew'
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('Static Code Analysis')
        {
            steps {
                sh script: '''
                    echo "I am Sonarqube Scan"
                ''',
            label: "static code analysis"
            }
        }
        
        
    }
    
   
}
